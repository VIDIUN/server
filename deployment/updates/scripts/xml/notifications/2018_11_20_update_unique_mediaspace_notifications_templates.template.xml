<?xml version="1.0" encoding="UTF-8"?>
<xml>
    <config>
        <serviceUrl>@SERVICE_URL@</serviceUrl>
        <partnerId>-2</partnerId>
        <clientTag>Stand alone php 1.0.0</clientTag>
        <curlTimeout>30</curlTimeout>
        <userAgent>Stand alone php 1.0.0</userAgent>
    </config>
    <session>
        <partnerId>-2</partnerId>
        <secret>@ADMIN_CONSOLE_PARTNER_ADMIN_SECRET@</secret>
        <sessionType>2</sessionType>
    </session>
    <!-- New Item Pending Moderation -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_New_Item_Pending_Moderation</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <eventConditions objectType="array">
                    <item objectType="VidiunEventFieldCondition">
                        <description>Status is pending, see VidiunCategoryEntryStatus</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryEntry &amp;&amp; $scope->getObject()->getStatus() == CategoryEntryStatus::PENDING</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>Category is inside of specified category root</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey('root_category_id'), explode('>', $scope->getObject()->getCategoryFullIds()))</code>
                        </field>
                    </item>
                </eventConditions>
            </template>
        </request>
    </multirequest>
    <!-- New Item Pending Moderation -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_New_Item_Pending_Moderation_2</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <eventConditions objectType="array">
                    <item objectType="VidiunEventFieldCondition">
                        <description>Status changed to pending, see VidiunCategoryEntryStatus</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryEntry &amp;&amp; in_array(categoryEntryPeer::STATUS, $scope->getEvent()->getModifiedColumns()) &amp;&amp; $scope->getObject()->getStatus() == CategoryEntryStatus::PENDING</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>Category is inside of specified category root</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey('root_category_id'), explode('>', $scope->getObject()->getCategoryFullIds()))</code>
                        </field>
                    </item>
                </eventConditions>
            </template>
        </request>
    </multirequest>
    <!-- Entry Approved In Category -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_Entry_Approved_In_Category</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <eventConditions objectType="array">
                    <item objectType="VidiunEventFieldCondition">
                        <description>Status changed to active, see VidiunCategoryEntryStatus</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryEntry &amp;&amp; in_array(categoryEntryPeer::STATUS, $scope->getEvent()->getModifiedColumns()) &amp;&amp; $scope->getObject()->getStatus() == CategoryEntryStatus::ACTIVE</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>Category is inside of specified category root</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey('root_category_id'), explode('>', $scope->getObject()->getCategoryFullIds()))</code>
                        </field>
                    </item>
                </eventConditions>
            </template>
        </request>
    </multirequest>
    <!-- Entry Rejected In Category -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_Entry_Rejected_In_Category</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <eventConditions objectType="array">
                    <item objectType="VidiunEventFieldCondition">
                        <description>Status changed to rejected, see VidiunCategoryEntryStatus</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryEntry &amp;&amp; in_array(categoryEntryPeer::STATUS, $scope->getEvent()->getModifiedColumns()) &amp;&amp; $scope->getObject()->getStatus() == CategoryEntryStatus::REJECTED</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>Category is inside of specified category root</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey('root_category_id'), explode('>', $scope->getObject()->getCategoryFullIds()))</code>
                        </field>
                    </item>
                </eventConditions>
            </template>
        </request>
    </multirequest>
    <!-- User was added to category as [role] -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_User_Added_To_Category_As_Role</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <eventConditions objectType="array">
                    <item objectType="VidiunEventFieldCondition">
                        <description>Status is active, see VidiunCategoryUserStatus</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryVuser &amp;&amp; $scope->getObject()->getStatus() == CategoryVuserStatus::ACTIVE</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>User has role, see VidiunCategoryUserPermissionLevel</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryVuser &amp;&amp; category::getPermissionLevelName($scope->getObject()->getPermissionLevel())</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>Category is inside of specified category root</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey('root_category_id'), explode('>', $scope->getObject()->getCategoryFullIds()))</code>
                        </field>
                    </item>
                </eventConditions>
            </template>
        </request>
    </multirequest>
    <!-- User's role was changed in category -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_User_Role_Was_Changed_In_Category</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <eventConditions objectType="array">
                    <item objectType="VidiunEventFieldCondition">
                        <description>Permission level changed (see VidiunCategoryUserPermissionLevel) and status is active (see VidiunCategoryUserStatus)</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryVuser &amp;&amp; in_array(categoryVuserPeer::PERMISSION_LEVEL, $scope->getEvent()->getModifiedColumns()) &amp;&amp; $scope->getObject()->getStatus() == CategoryVuserStatus::ACTIVE</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>Category is inside of specified category root</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey('root_category_id'), explode('>', $scope->getObject()->getCategoryFullIds()))</code>
                        </field>
                    </item>
                </eventConditions>
            </template>
        </request>
    </multirequest>
    <!-- User was removed from category -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_User_Was_Removed_From_Category</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <eventConditions objectType="array">
                    <item objectType="VidiunEventFieldCondition">
                        <description>Object type verified</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryVuser</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>Category is inside of specified category root</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey('root_category_id'), explode('>', $scope->getObject()->getCategoryFullIds()))</code>
                        </field>
                    </item>
                </eventConditions>
            </template>
        </request>
    </multirequest>
    <!-- Entry was added to channel -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_Entry_Was_Added_To_Channel</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <eventConditions objectType="array">
                    <item objectType="VidiunEventFieldCondition">
                        <description>Status is active, see VidiunCategoryEntryStatus</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>$scope->getObject() instanceof categoryEntry &amp;&amp; $scope->getObject()->getStatus() == CategoryEntryStatus::ACTIVE</code>
                        </field>
                    </item>
                    <item objectType="VidiunEventFieldCondition">
                        <description>Category is inside of specified category root</description>
                        <field objectType="VidiunEvalBooleanField">
                            <code>in_array($scope->getDynamicValueByKey('root_category_id'), explode('>', $scope->getObject()->getCategoryFullIds()))</code>
                        </field>
                    </item>
                </eventConditions>
            </template>
        </request>
    </multirequest>
    <!-- Entry Ready -->
    <multirequest>
        <!-- Get notification template using system name -->
        <request service="eventNotificationTemplate" action="listTemplates" plugin="eventNotification" partnerId="0">
            <filter objectType="VidiunEventNotificationTemplateFilter">
                <systemNameEqual>Unique_Vms_Entry_Ready</systemNameEqual>
            </filter>
            <pager objectType="VidiunFilterPager">
                <pageSize>1</pageSize>
            </pager>
        </request>
        <!-- Update notification template -->
        <request service="eventNotificationTemplate" action="update" plugin="eventNotification" partnerId="0">
            <id>{1:result:objects:0:id}</id>
            <template objectType="VidiunEmailNotificationTemplate">
                <contentParameters objectType="array">
                    <item objectType="VidiunEventNotificationParameter">
                        <key>from_email</key>
                        <description>Sender email</description>
                        <value objectType="VidiunEvalStringField">
                            <code>vConf::get("partner_notification_email")</code>
                        </value>
                    </item>
                    <item objectType="VidiunEventNotificationParameter">
                        <key>from_name</key>
                        <description>Sender name</description>
                        <value objectType="VidiunEvalStringField">
                            <code>vConf::get("partner_notification_name")</code>
                        </value>
                    </item>
                    <item objectType="VidiunEventNotificationParameter">
                        <key>entry_id</key>
                        <description>Entry ID</description>
                        <value objectType="VidiunEvalStringField">
                            <code>(($scope->getObject() instanceof entry) &amp;&amp; ($scope->getObject()->getIsTemporary()) &amp;&amp; ($scope->getObject()->getReplacedEntryId()))? $scope->getObject()->getReplacedEntryId():$scope->getObject()->getId()</code>
                        </value>
                    </item>
                    <item objectType="VidiunEventNotificationParameter">
                        <key>entry_name</key>
                        <description>Entry name</description>
                        <value objectType="VidiunEvalStringField">
                            <code>(($scope->getObject() instanceof entry) &amp;&amp; ($scope->getObject()->getIsTemporary()) &amp;&amp; ($scope->getObject()->getReplacedEntryId()))? entryPeer::retrieveByPK($scope->getObject()->getReplacedEntryId())->getName():$scope->getObject()->getName()</code>
                        </value>
                    </item>
                    <item objectType="VidiunEventNotificationParameter">
                        <key>creator_name</key>
                        <description>Entry creator name</description>
                        <value objectType="VidiunEvalStringField">
                            <code>($user = $scope->getObject()->getvuser()) ? $user->getFirstName() . ' ' . $user->getLastName() : ''</code>
                        </value>
                    </item>
                    <item objectType="VidiunEventNotificationParameter">
                        <key>creator_id</key>
                        <description>Entry creator ID</description>
                        <value objectType="VidiunEvalStringField">
                            <code>$scope->getObject()->getVuserId()</code>
                        </value>
                    </item>
                    <item objectType="VidiunEventNotificationParameter">
                        <key>creator_email</key>
                        <description>Entry creator email</description>
                        <value objectType="VidiunEvalStringField">
                            <code>($user = $scope->getObject()->getvuser()) ? $user->getEmail() : ''</code>
                        </value>
                    </item>
                    <item objectType="VidiunEventNotificationParameter">
                        <key>owner_name</key>
                        <description>Account owner name</description>
                        <value objectType="VidiunEvalStringField">
                            <code>($entry = entryPeer::retrieveByPk($scope->getObject()->getEntryId())) ? $entry->getPartner()->getPartnerName() : ''</code>
                        </value>
                    </item>
                    <item objectType="VidiunEventNotificationParameter">
                        <key>owner_email</key>
                        <description>Account owner email</description>
                        <value objectType="VidiunEvalStringField">
                            <code>($entry = entryPeer::retrieveByPk($scope->getObject()->getEntryId())) ? $entry->getPartner()->getAdminEmail() : ''</code>
                        </value>
                    </item>
                </contentParameters>
            </template>
        </request>
    </multirequest>
</xml>
